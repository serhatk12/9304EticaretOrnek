                <ul class="s_options">
                    <li><a href=""><img src="/Content/front/images/flags/gb.png" alt="English" /> English</a></li>
                    <li><a href=""><img src="/Content/front/images/flags/de.png" alt="Deutsch" /> Deutsch</a></li>
                </ul>
            </div>

         @{
             Html.RenderAction("Kategoriler", "Layout");
             Html.RenderAction("Sepet", "Layout");
